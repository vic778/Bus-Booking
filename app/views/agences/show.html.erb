<h1 class="title is-2"><%= @agence.name %></h1>

<section class="section instrument-show">
  <div class="columns">
    <div class="column is-8">     
      <ul class="pv1">
        <% if @agence.register_number? %>
        <li class="inline-block pr3"><%= @agence.register_number %></li>
        <% end %>

        <li class="inline-block pr3"><%= @agence.road %></li>

        <li class="inline-block pr3"><%= @agence.avenue %></li>    
      </ul>
    </div>
 </div>
</section>

<table>
  <thead>
     <tr>
        <th>bus_name &emsp;</th>
        <th>model &emsp;</th>
        <th>boarding&emsp;</th>
        <th>destination&emsp;</th>
        <th>No of Seats&emsp;</th> 
        
         <th>Time&emsp;</th>
        <th>Action</th> 
     </tr>
  </thead>
    <tbody>
        <% @buses.each do |bus| %>
            <tr>
                <td><%= bus.name %></td>
                <td><%= bus.model %></td>
                <td><%= bus.boarding %></td>
                <td><%= bus.destination %></td>
                <td><%= bus.no_of_seats %></td>                
            </tr>
        <% end %>
    <tbody>
</table>

    <br/>
    <br/>

<%= link_to 'Edit', edit_agence_path(@agence) %>